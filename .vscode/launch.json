{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Backend Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/server.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3001"
            },
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": false,
            "outFiles": []
        },
        {
            "name": "Debug Backend Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/server.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": "3001",
                "DEBUG": "*"
            },
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": false,
            "outFiles": []
        }
    ]
}
